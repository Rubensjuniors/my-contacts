{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"],
      "baseUrl": ["."],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
